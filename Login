    <div class="container">
        <h1>Login</h1>
        
        <form id="loginForm">
            <div class="form-group">
                <label for="name">Name <span class="required">*</span></label>
                <input type="text" id="name" name="name" required>
                <div class="error-message" id="nameError"></div>
            </div>

            <div class="form-group">
                <label for="organisation">Organisation <span class="required">*</span></label>
                <input type="text" id="organisation" name="organisation" required>
                <div class="error-message" id="organisationError"></div>
            </div>

            <div class="form-group">
                <label for="countryCode">Country <span class="required">*</span></label>
                <select id="countryCode" name="countryCode" required>
                    <option value="">Select Country</option>
                    <option value="+91">ðŸ‡®ðŸ‡³ India (+91)</option>
                    <option value="+971">ðŸ‡¦ðŸ‡ª UAE (+971)</option>
                    <option value="+966">ðŸ‡¸ðŸ‡¦ Saudi Arabia (+966)</option>
                </select>
                <div class="error-message" id="countryError"></div>
            </div>

            <div class="form-group">
                <label for="mobile">Mobile Number <span class="required">*</span></label>
                <div class="mobile-wrapper">
                    <input type="text" id="countryCodeDisplay" class="country-code" readonly placeholder="Code" style="background-color: #f5f5f5;">
                    <input type="tel" id="mobile" name="mobile" class="mobile-input" placeholder="Enter your mobile number" required autocomplete="tel">
                </div>
                <div class="error-message" id="mobileError"></div>
            </div>

            <div class="form-group">
                <label for="email">Email ID <span class="required">*</span></label>
                <input type="email" id="email" name="email" required>
                <div class="error-message" id="emailError"></div>
            </div>

            <div class="form-group">
                <label>Send OTP to <span class="required">*</span></label>
                <div class="otp-delivery-option">
                    <label>
                        <input type="radio" name="otpDelivery" value="mobile" checked>
                        <span>Mobile Number</span>
                    </label>
                    <label>
                        <input type="radio" name="otpDelivery" value="email">
                        <span>Email ID</span>
                    </label>
                </div>
            </div>

            <button type="submit" id="sendOtpBtn">Send OTP</button>
        </form>

        <div class="otp-section" id="otpSection">
            <div class="otp-info">
                <div id="otpSentMessage">OTP has been sent</div>
                <div class="otp-display" id="otpDisplay"></div>
                <div class="otp-sent-to" id="otpSentTo"></div>
                <div style="margin-top: 10px; font-size: 12px; color: #666;">Please check your phone/email for the OTP code</div>
            </div>

            <form id="otpForm">
                <div class="form-group">
                    <label for="otp">Enter OTP <span class="required">*</span></label>
                    <input type="number" id="otp" name="otp" maxlength="6" required>
                    <div class="error-message" id="otpError"></div>
                </div>

                <button type="submit" id="verifyOtpBtn">Verify OTP</button>
            </form>
        </div>
