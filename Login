    <script>
        // Country code configurations
        const countryConfigs = {
            '+91': {
                name: 'India',
                pattern: /^[6-9]\d{9}$/,
                maxLength: 10,
                placeholder: '10-digit number (starts with 6-9)',
                example: '9876543210'
            },
            '+971': {
                name: 'UAE',
                pattern: /^[2-9]\d{8}$/,
                maxLength: 9,
                placeholder: '9-digit number',
                example: '501234567'
            },
            '+966': {
                name: 'Saudi Arabia',
                pattern: /^[5]\d{8}$/,
                maxLength: 9,
                placeholder: '9-digit number (starts with 5)',
                example: '501234567'
            }
        };

        // Mobile number validation based on country
        function validateMobile(mobile, countryCode) {
            if (!countryConfigs[countryCode]) {
                return false;
            }
            const config = countryConfigs[countryCode];
            return config.pattern.test(mobile);
        }

        // Generate 6-digit OTP
        function generateOTP() {
            return Math.floor(100000 + Math.random() * 900000).toString();
        }

        // Show error message
        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = message;
            errorElement.classList.add('show');
        }

        // Hide error message
        function hideError(elementId) {
            const errorElement = document.getElementById(elementId);
            errorElement.classList.remove('show');
        }

        // Validate email format
        function validateEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Initialize mobile input - ensure it's always enabled
        const mobileInput = document.getElementById('mobile');
        mobileInput.removeAttribute('disabled');
        mobileInput.setAttribute('autocomplete', 'tel');

        // Update mobile input based on country selection
        document.getElementById('countryCode').addEventListener('change', function() {
            const countryCode = this.value;
            const mobileInput = document.getElementById('mobile');
            const countryDisplay = document.getElementById('countryCodeDisplay');
            
            // Always ensure mobile input is enabled
            mobileInput.removeAttribute('disabled');
            
            if (countryCode && countryConfigs[countryCode]) {
                const config = countryConfigs[countryCode];
                countryDisplay.value = countryCode;
                mobileInput.placeholder = `Enter ${config.name} number (e.g., ${config.example})`;
                mobileInput.maxLength = config.maxLength;
                mobileInput.focus(); // Focus on mobile input after country selection
                hideError('countryError');
                hideError('mobileError');
            } else {
                countryDisplay.value = '';
                mobileInput.placeholder = 'Enter your mobile number';
                mobileInput.maxLength = 15;
            }
        });

        // Login form submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // Hide all previous errors
            ['nameError', 'organisationError', 'countryError', 'mobileError', 'emailError'].forEach(hideError);

            // Get form values
            const name = document.getElementById('name').value.trim();
            const organisation = document.getElementById('organisation').value.trim();
            const countryCode = document.getElementById('countryCode').value;
            const mobile = document.getElementById('mobile').value.trim();
            const email = document.getElementById('email').value.trim();
            const otpDelivery = document.querySelector('input[name="otpDelivery"]:checked').value;

            let isValid = true;

            // Validate name
            if (!name) {
                showError('nameError', 'Name is required');
                isValid = false;
            }

            // Validate organisation
            if (!organisation) {
                showError('organisationError', 'Organisation is required');
                isValid = false;
            }

            // Validate country code
            if (!countryCode) {
                showError('countryError', 'Please select a country');
                isValid = false;
            }

            // Validate mobile
            if (!mobile) {
                showError('mobileError', 'Mobile number is required');
                isValid = false;
            } else if (countryCode && !validateMobile(mobile, countryCode)) {
                const config = countryConfigs[countryCode];
                showError('mobileError', `Please enter a valid ${config.name} mobile number (${config.placeholder})`);
                isValid = false;
            }

            // Validate email
            if (!email) {
                showError('emailError', 'Email is required');
                isValid = false;
            } else if (!validateEmail(email)) {
                showError('emailError', 'Please enter a valid email address');
                isValid = false;
            }

            if (isValid) {
                // Offline OTP flow (no server required)
                const otp = generateOTP();

                // Store OTP in sessionStorage
                sessionStorage.setItem('otp', otp);

                // Store form data temporarily (will be saved after OTP verification)
                sessionStorage.setItem('tempUserData', JSON.stringify({
                    name: name,
                    organisation: organisation,
                    countryCode: countryCode,
                    mobile: mobile,
                    email: email,
                    fullMobile: countryCode + mobile,
                    otpDelivery: otpDelivery
                }));

                // Determine where OTP was "sent" (simulated)
                let otpSentTo = '';
                let otpSentMessage = '';
                if (otpDelivery === 'mobile') {
                    otpSentTo = `Mobile: ${countryCode} ${mobile}`;
                    otpSentMessage = 'OTP is generated (simulated SMS)';
                } else {
                    otpSentTo = `Email: ${email}`;
                    otpSentMessage = 'OTP is generated (simulated Email)';
                }

                // Display OTP section and show OTP on screen
                document.getElementById('otpSection').classList.add('show');
                document.getElementById('otpDisplay').textContent = otp;
                document.getElementById('otpSentMessage').textContent = otpSentMessage;
                document.getElementById('otpSentTo').textContent = otpSentTo;

                // Scroll to OTP section
                document.getElementById('otpSection').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
        });

        // OTP form submission
        document.getElementById('otpForm').addEventListener('submit', function(e) {
            e.preventDefault();

            hideError('otpError');

            const enteredOtp = document.getElementById('otp').value.trim();
            const tempUserData = JSON.parse(sessionStorage.getItem('tempUserData'));
            const storedOtp = sessionStorage.getItem('otp');

            if (!enteredOtp) {
                showError('otpError', 'Please enter the OTP');
                return;
            }

            if (enteredOtp.length !== 6) {
                showError('otpError', 'OTP must be 6 digits');
                return;
            }

            if (!tempUserData) {
                showError('otpError', 'Session expired. Please start over.');
                return;
            }

            if (!storedOtp) {
                showError('otpError', 'OTP expired. Please click "Send OTP" again.');
                return;
            }

            if (enteredOtp !== storedOtp) {
                showError('otpError', 'Invalid OTP. Please try again.');
                return;
            }

            // Save user data to localStorage
            localStorage.setItem('userData', JSON.stringify(tempUserData));

            // Clear temporary data and OTP
            sessionStorage.removeItem('tempUserData');
            sessionStorage.removeItem('otp');

            // Redirect to dashboard
            window.location.href = 'dashboard.html';
        });

        // Restrict mobile input to numbers only - ensure it's always enabled
        mobileInput.addEventListener('input', function(e) {
            // Ensure field is enabled
            e.target.removeAttribute('disabled');
            e.target.value = e.target.value.replace(/[^0-9]/g, '');
            // Auto-validate length based on country
            const countryCode = document.getElementById('countryCode').value;
            if (countryCode && countryConfigs[countryCode]) {
                const maxLength = countryConfigs[countryCode].maxLength;
                if (e.target.value.length > maxLength) {
                    e.target.value = e.target.value.slice(0, maxLength);
                }
            }
            // Clear any error when user starts typing
            hideError('mobileError');
        });

        // Ensure mobile input is always clickable and enabled
        mobileInput.addEventListener('click', function(e) {
            e.target.removeAttribute('disabled');
            e.target.focus();
        });

        // Allow mobile input to be focused and typed even without country selection
        mobileInput.addEventListener('focus', function() {
            this.removeAttribute('disabled');
            const countryCode = document.getElementById('countryCode').value;
            if (!countryCode) {
                // Show helpful hint
                const mobileError = document.getElementById('mobileError');
                mobileError.textContent = 'Tip: Select a country first for proper validation';
                mobileError.classList.add('show');
            } else {
                hideError('mobileError');
            }
        });

        // Restrict OTP input to numbers only
        document.getElementById('otp').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/[^0-9]/g, '');
        });

        // Check if user is already logged in
        if (localStorage.getItem('userData')) {
            window.location.href = 'dashboard.html';
        }

        // Final check - ensure mobile input is enabled when page loads
        window.addEventListener('load', function() {
            const mobileInput = document.getElementById('mobile');
            if (mobileInput) {
                mobileInput.removeAttribute('disabled');
                mobileInput.setAttribute('tabindex', '0');
                console.log('Mobile input field is enabled and ready');
            }
        });

        // Debug helper - log if mobile input is clicked
        document.getElementById('mobile').addEventListener('click', function() {
            console.log('Mobile input clicked - field should be enabled');
            this.removeAttribute('disabled');
        });
    </script>
</body>
</html>
