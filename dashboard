    <script>
        // Check if user is logged in
        const userData = localStorage.getItem('userData');
        
        if (!userData) {
            // Redirect to login if not logged in
            window.location.href = 'login.html';
        } else {
            // Display user information
            const user = JSON.parse(userData);
            document.getElementById('welcomeMessage').textContent = `Welcome, ${user.name}!`;
            const mobileDisplay = user.fullMobile || (user.countryCode ? `${user.countryCode} ${user.mobile}` : user.mobile);
            document.getElementById('userInfo').textContent = `${user.organisation} â€¢ ${mobileDisplay}`;
        }

        // Update date and time every second
        function updateDateTime() {
            const now = new Date();
            
            // Format date
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            const dateString = now.toLocaleDateString('en-US', options);
            document.getElementById('currentDate').textContent = dateString;
            
            // Format time
            const timeString = now.toLocaleTimeString('en-US', { 
                hour12: true,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('currentTime').textContent = timeString;
        }

        // Update immediately and then every second
        updateDateTime();
        setInterval(updateDateTime, 1000);

        // Button click handlers
        document.getElementById('projectBtn').addEventListener('click', function() {
            alert('Project button clicked!\n\nThis would navigate to the Project section.');
            // In a real application, you would navigate to a project page or show project content
        });

        document.getElementById('drawingBtn').addEventListener('click', function() {
            alert('Drawing button clicked!\n\nThis would navigate to the Drawing section.');
            // In a real application, you would navigate to a drawing page or show drawing content
        });

        document.getElementById('hardwareBtn').addEventListener('click', function() {
            alert('Hardware Details button clicked!\n\nThis would navigate to the Hardware Details section.');
            // In a real application, you would navigate to a hardware details page or show hardware content
        });

        // Logout functionality
        document.getElementById('logoutBtn').addEventListener('click', function() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.removeItem('userData');
                window.location.href = 'login.html';
            }
        });
    </script>
