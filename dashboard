<body>
    <div class="container">
        <div class="header">
            <div>
                <div class="welcome" id="welcomeMessage">Welcome!</div>
                <div class="user-info" id="userInfo"></div>
            </div>
            <div class="datetime">
                <div class="date" id="currentDate"></div>
                <div class="time" id="currentTime"></div>
            </div>
        </div>

        <div class="content">
            <h2 style="color: #333; margin-bottom: 20px;">Actions</h2>
            <div class="buttons-container">
                <button class="action-button" id="projectBtn">Project</button>
                <button class="action-button" id="drawingBtn">Drawing</button>
                <button class="action-button" id="hardwareBtn">Hardware Details</button>
            </div>

            <div class="logout-container">
                <button class="logout-button" id="logoutBtn">Logout</button>
            </div>
        </div>
